  body
    main.signup-login-main
      a.Main--logo(href="#")
        svg.logo--modififier
          use(xlink:href='./images/sprite.svg#icon-renren')

      div.book.book--login
        div.book__heading.margin-bottom1
          h1.center-text.heading--design Login
        
